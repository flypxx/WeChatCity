.container {
  padding: 0;
  background-color: #fff;
  font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
}

.chart-block {
  position: relative;
  height: 200px;
  width: 100%;
}

.canvas-box {
  width: 95%;
  height: 100%;
  margin: 0 auto;
  overflow-x: auto;
  z-index: 90;
}

.data-max {
  position: absolute;
  top: 4px;
  right: 10px;
  font-size: 10px;
  color: #353535;
  z-index: 100;
}

.data-avg {
  position: absolute;
  top: 94px;
  right: 10px;
  font-size: 10px;
  color: #353535;
  z-index: 100;
}

.data-val {
  font-size: 10px;
  padding: 2px 6px;
  color: #fff;
  background-color: rgb(253, 112, 100);
  border-radius: 8px;
}

/*****/

.view-chart {
  position: relative;
  height: 200px;
  width: 100%;
  top: 40px;
}

.background-top {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 88px;
  border-top: 1rpx solid rgba(0, 0, 0, 0.05);
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
  z-index: 11;
}

.background-bottom {
  position: absolute;
  top: 90px;
  left: 0;
  width: 100%;
  height: 89px;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
  z-index: 11;
}

.chart-scroll {
  position: absolute;
  top: 0;
  left: 0;
  height: 200px;
  width: 95%;
  margin: 0 2.5%;
  z-index: 12;
}

.chart-data {
  position: absolute;
  top: 0;
  left: 0;
  height: 200px;
}

.bar-chart {
  position: absolute;
  top: 0;
  left: 0;
  height: 180px;
  display: flex;
}

.bar-unit {
  position: relative;
  display: flex;
}

.bar-val {
  position: absolute;
  bottom: 1rpx;
  width: 8px;
  height: 120px;
  background-image: linear-gradient(0deg, rgba(235, 0, 0, 1), rgba(253, 112, 100, 1));
  border-top-right-radius: 4px;
  border-top-left-radius: 4px;
}

.bar-real-val {
  position: absolute;
  bottom: 1rpx;
  width: 8px;
  height: 100px;
  background: linear-gradient(0deg, #e04e86, #de86ef);
  border-top-right-radius: 4px;
  border-top-left-radius: 4px;
}

.x-axis {
  position: absolute;
  bottom: 0;
  left: 0;
  display: flex;
  height: 20px;
  line-height: 20px;
  text-align: center;
  font-size: 7pt;
  color: #353535;
}

.tips-detail {
  font-size: 9pt;
  padding: 2px 6px 2px 3px;
  border: 1rpx solid rgba(0, 0, 0, 0.05);
  border-radius: 3px;
  background-color: #fff;
  z-index: 14;
}

.tips-val {
  display: flex;
  color: rgba(235, 0, 0, 1);
}

.tips-val .legend {
  flex: 0 0 8px;
  width: 8px;
  height: 8px;
  border-radius: 4px;
  background-color: rgba(235, 0, 0, 1);
  margin: 3px;
}

.tips-real-val {
  display: flex;
  color: #de86ef;
}

.tips-real-val .legend {
  flex: 0 0 8px;
  width: 8px;
  height: 8px;
  border-radius: 4px;
  background-color: #de86ef;
  margin: 3px;
}

.tips-max {
  font-size: 7pt;
  position: absolute;
  top: 4px;
  right: 8px;
  color: #353535;
  z-index: 13;
}

.tips-avg {
  font-size: 7pt;
  position: absolute;
  top: 92px;
  right: 8px;
  color: #353535;
  z-index: 13;
}
